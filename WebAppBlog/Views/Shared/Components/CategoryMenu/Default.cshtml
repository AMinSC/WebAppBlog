@model IEnumerable<WebAppBlog.Models.Categories>

<div class="card my-4">
    <h5 class="card-header">Categories</h5>
    <div class="card-body">
        <ul class="list-unstyled mb-0">
            <li>
                <a asp-controller="Post" asp-action="Index" asp-route-slug="">전체 보기</a>
            </li>
            @foreach (var category in Model)
            {
                <li>
                    <a asp-controller="Post" asp-action="Index" asp-route-slug="@category.CategoryName">
                        @category.CategoryName
                    </a>
                </li>
            }
        </ul>
    </div>
</div>