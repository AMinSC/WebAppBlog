@model WebAppBlog.ViewModels.PostEditViewModel

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">제목</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">내용</label>
                <div class="editor-container">
                    <div class="editor-pane">
                        @* 왼쪽: 마크다운 입력 공간 *@
                        <textarea asp-for="Content" id="markdown-editor" class="form-control"></textarea>
                    </div>
                    <div class="preview-pane">
                        @* 오른쪽: 변환된 HTML이 표시될 공간 *@
                        <div id="markdown-preview"></div>
                    </div>
                </div>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="Model.Categories">
                            <option value="">-- 카테고리 선택 --</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="NewCategoryName" class="control-label"></label>
                        <input asp-for="NewCategoryName" class="form-control" placeholder="여기에 입력 시 새 카테고리 추가" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UrlSlug" class="control-label">키워드</label>
                <input asp-for="UrlSlug" class="form-control" />
                <span asp-validation-for="UrlSlug" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="작성완료" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">돌아가기</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
